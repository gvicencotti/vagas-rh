<%= form_with model: @vacancy do |f| %>

  <div>
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :requirements %>
    <%= f.text_field :requirements %>
  </div>
  <div>
    <%= f.label :localization %>
    <%= f.text_field :localization %>
  </div>
  <div>
    <%= f.label :expiration_date %>
    <%= f.date_field :expiration_date %>
  </div>
  
  <% if current_page?(new_vacancy_path) %>
    <%= render 'components/new_button', f: f %>
  <% else %>
    <%= render 'components/edit_button', f: f %>
  <% end %>
  
<% end %>

