<h1>Nova Vaga</h1>
<% if @vacancy.errors.any? %>
  <div class="alert">
    <p>Não foi possível cadastrar a vaga</p>
    <p>Veja erros abaixo:</p>
    <ul>
    <% @vacancy.errors.full_messages.each do |v| %>
      <li><%= v %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @vacancy) do |f| %>
  
  <div>
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>
  <div>
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :requirements %>
    <%= f.text_field :requirements %>
  </div>
  <div>
    <%= f.label :localization %>
    <%= f.text_field :localization %>
  </div>
  <div>
    <%= f.label :expiration_date %>
    <%= f.text_field :expiration_date %>
  </div>
  <%= f.submit 'Criar vaga' %>
  
<% end %>