<h1>Nova empresa</h1>
<% if @company.errors.any? %>
  <div class="alert">
    <p>Não foi possível cadastrar a empresa</p>
    <p>Veja erros abaixo:</p>
    <ul>
    <% @company.errors.full_messages.each do |v| %>
      <li><%= v %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @company do |f| %>
  <div>
      <%= f.label :company_name %>
      <%= f.text_field :company_name %>
    </div>
    <div>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :district %>
      <%= f.text_field :district %>
    </div>
    <div>
      <%= f.label :cnpj %>
      <%= f.text_field :cnpj %>
    </div>
    <div>
      <%= f.label :site %>
      <%= f.text_field :site %>
    </div>
    <div>
      <%= f.submit 'Cadastrar' %>
    </div>
<% end %>

<%= link_to 'Voltar', root_path %>
  